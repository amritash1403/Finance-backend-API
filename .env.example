# Environment variables for Finance SMS Logger
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production  # Replace with your actual secret key
DEBUG=True

# Logging Configuration
LOG_LEVEL=INFO

# Google Sheets Configuration
SHARED_WORKBOOK_ID=your-shared-workbook-id-here

# Google Service Account Credentials (sensitive)
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_PRIVATE_KEY_ID=your-private-key-id
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
YOUR_PRIVATE_KEY_HERE
-----END PRIVATE KEY-----
"
GOOGLE_CLIENT_EMAIL=your-service-account@your-project-id.iam.gserviceaccount.com
GOOGLE_CLIENT_ID=your-client-id

# Editor Configuration (comma-separated emails)
EDITOR_EMAILS=your-email@example.com

# API Authentication
API_KEY=your-secure-api-key-here  # Replace with your actual API key

# API Configuration (optional overrides)
API_VERSION=v1
MAX_SMS_LENGTH=1000
MIN_SMS_LENGTH=10
